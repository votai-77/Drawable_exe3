<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        style="@style/TieuDe"
        android:text="@string/qltbth" />


    <LinearLayout
        style="@style/linear"
        android:layout_width="386dp">
        <Button
            android:id="@+id/btnLoaiTB"
            style="@style/ChucNang"
            android:layout_width="154dp"
            android:layout_height="wrap_content"

            android:text="@string/ltb" />
        <Button
            android:id="@+id/btnTB"
            style="@style/ChucNang"
            android:layout_width="146dp"
            android:layout_height="wrap_content"

            android:text="@string/tb" />
        />
    </LinearLayout>

    <LinearLayout
        style="@style/linear"
        android:layout_width="381dp">

        <Button
            android:id="@+id/btnChiTietSD"
            style="@style/ChucNang"

            android:text="@string/ctsd" />

        <Button
            android:id="@+id/btnPhongHoc"
            style="@style/ChucNang"
            android:layout_width="151dp"
            android:layout_height="wrap_content"

            android:text="@string/ph" />
        />
    </LinearLayout>

    <Button
        android:id="@+id/btnThoat"
        style="@style/ChucNang"
        android:layout_width="150dp"
        android:layout_gravity="center"

        android:text="@string/thoat" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <ImageView
        android:id="@+id/imgCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/load" />
</LinearLayout>

</LinearLayout>